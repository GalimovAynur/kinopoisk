<%= form_with model: @movie, local: true, html: {multipart: true} do |form| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <%= pluralize(@movie.errors.count, "error") %> prohibited this article from being saved:
    </div>
    <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :release_date %>
    <%= form.text_field :release_date, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :director %>
    <%= form.collection_select :director_id, Director.all, :id, :name, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.label :poster %>
    <%= form.file_field :poster, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= form.submit 'Update', class: 'btn btn-primary' %>
  </div>
<% end %>