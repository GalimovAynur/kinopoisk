<div class="row">
  <div class="col">
    <h2><%= @movie.title %></h2>
  </div>
</div>

<div class="row">
  <div class="col-3"><%= image_tag @movie.poster.url(:medium) %></div>
  <div class="col-9">
    <p><%= @movie.director.name %></p>
    <p><%= @movie.release_date %></p>
    <p><%= @movie.description %></p>
    <p><%= link_to 'Destroy', movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
</div>